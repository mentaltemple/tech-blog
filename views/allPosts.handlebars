{{log posts}}
<div class="posts">
  {{#each posts}}
    <div class="card">
      <div class="card-header flex-row">
        <h2>
          <a href="/post/{{id}}">{{title}}</a>
        </h2>
        <div>
          Posted by:
          {{User.username}}
          on
          {{format_date createdAt}}
        </div>
      </div>
      <div class="card-body">
        <p>{{body}}</p>
      </div>
    </div>
  {{/each}}
</div>